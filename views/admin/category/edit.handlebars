

	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		<div class="row">
			<div class="col-md-12">
					
					<div class="panel panel-primary" data-collapsed="0">
					
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
							
						</div>
						
						<div class="panel-body">
							
							<form role="form" method="post" action="" class="form-horizontal form-groups-bordered">
								<div class="form-group">
									<label class="col-sm-3 control-label">Thuộc danh mục {{cate.catalog_id}}</label>
									
									<div class="col-sm-5">
										<select class="form-control" name="catalog">		
											{{{catalog}}}
										</select>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">ID loại tin</label>
									<div class="col-sm-5">
											<input type="text" class="form-control" value="{{cate.id}}" disabled>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Tên loại tin</label>
									
									<div class="col-sm-5">
											<input type="hidden" name="id" value="{{cate.id}}">
											<input type="text" name="name" id="name" class="form-control" placeholder="Tên loại tin" value="{{cate.name}}" required>
									
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Vị trí ưu tiên</label>
									
									<div class="col-sm-5">
										<select class="form-control" name="order">											
											<option value="1" {{#if cate.orderb}}selected{{/if}}>Xếp đầu</option>
											<option value="0" {{#ifCond cate.orderb '==' 0}}selected{{/ifCond}}>Xếp cuối</option>
										</select>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Ẩn/hiện loại tin</label>
								
									<div class="col-sm-5">
							
										<div class="bs-example">			
											<div class="make-switch" data-on="primary" data-off="info">
											{{#if cate.ishide}}
												<input type="checkbox" name="checkbox" checked>
											{{else}}
												<input type="checkbox" name="checkbox" >
											{{/if}}
											</div>
										</div>
										
									</div>
								</div>

								<div class="form-group">	
									<div class="col-sm-8" style="text-align: center;">
							
										<div class="bs-example">	
											<button type="submit" class="btn btn-green btn-icon">
												Sửa loại tin<i class="entypo-check"></i>
											</button>
										</div>
										
									</div>
								</div>							
							
							</form>
						</div>
				</div>
			</div>
		</div>
		<br />
		
		<!-- Footer -->
		{{>footer-admin}}
	</div>